class Libaika < Formula
  desc "C++ cross-platform time library."
  homepage "https://github.com/igagis/aika"
  url "https://github.com/igagis/aika/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libnitki"
  depends_on "libutki"

  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "install"
  end

  test do
    system "make", "test"
  end
end
